{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Current File",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "${file}"
            ],
        },
        {
            "label": "streamlit",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "streamlit",
                "run",
                "main.py"
            ]
        },
        {
            "label": "upload new words",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "src/db/db_word.py"
            ]
        },
    ]
}