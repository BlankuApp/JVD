{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Current File",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "${file}"
            ],
        },
        {
            "label": "streamlit",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "streamlit",
                "run",
                "main.py"
            ]
        },
        {
            "label": "upload to supabase",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "src/db/db_word.py"
            ]
        },
        {
            "label": "Generate Words",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "src.word.JPWord"
            ]
        },
        {
            "label": "Upload Videos",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "src.upload_video"
            ]
        }
    ]
}